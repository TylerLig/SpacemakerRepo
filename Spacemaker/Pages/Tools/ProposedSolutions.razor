@using Spacemaker.Data
@inject WorkSurfaceState WorkSurfaceState
@inject IDataAccess DataRepository

<div class="@(Style + " default-background")" style="padding: 30px; overflow-y: scroll;">
    @if (!WorkSurfaceState.Solutions.Any())
    {
        <p><em>No Solutions available</em></p>
    }
    else
    {
        <br />
        @foreach (Solution solution in WorkSurfaceState.Solutions)
        {
            <div @onclick="@(() => SelectSolution(WorkSurfaceState.Solutions.IndexOf(solution)))">
                <Card Bordered="true" Title="@(solution.Title)"
                      Style="@("width: 100%; min-width: 150px;" + (solution.Equals(WorkSurfaceState.SelectedSolution) ? "border-color: #3EA6FF; border-width: 0.2em;" : ""))">
                    <Body>
                        <Image style="max-width: 100%; height: auto;"
                               Src="error"
                               Fallback="data:image/png;base64," />
                    </Body>
                </Card>
            </div>
            <br />
        }
    }
</div>

@code{
    [Parameter]
    public string Style { get; set; }

    protected override void OnInitialized()
    {
        WorkSurfaceState.Solutions = new List<Solution>(DataRepository.GetSolutions());
    }

    private void SelectSolution(int index)
    {
        if (WorkSurfaceState.SelectedIndex.Equals(index))
            return;
        WorkSurfaceState.PreSolutionStateChangedDelegate.Invoke();
        WorkSurfaceState.SelectedIndex = index;
        WorkSurfaceState.PostSolutionStateChangedDelegate.Invoke();
    }
}
